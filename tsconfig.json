{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom", "WebWorker"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/pages/*": ["src/pages/*"],
      "@/components/*": ["src/components/*"],
      "@/generic/*": ["src/components/generic/*"],
      "@/svg/*": ["src/components/svg/*"],
      "@/constants/*": ["src/constants/*"],
      "@/constants": ["src/constants/"],
      "@/themes/*": ["src/themes/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/hooks": ["src/hooks/"],
      "@/features/*": ["src/features/*"],
      "@/features": ["src/features/"],
      "@/utils/*": ["src/utils/*"],
      "@/utils": ["src/utils/"],
      "@/store": ["src/store/"],
      "@/db/*": ["src/db/*"],
      "@/db": ["src/db/"],
      "@/types/*": ["src/types/*"],
      "@/types": ["src/types/"]
    }
  },
  "include": [
    "./src/types/typeRoot/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx", 
    "src/components/onboarding/password"
  ], 
  "exclude": [
    "src/__test__",
    "server",
    "demo"
  ]
}
